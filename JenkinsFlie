pipeline {
    agent any
    tools
    {
    maven "MAVEN_HOME"
    }
    stages{
    
        stage('Run Tests') {
            parallel {

         stage("test1"){
            steps
            {
                git "https://github.com/mohamedtarekali/usingShaftEngine.git"
                bat "mvn -Dmaven.test.failure.ignore=true clean package -f ShaftEnginProject/pom.xml"
                publishHTML([reportName  : 'Allure Report', reportDir: 'target/site/allure-maven-plugin', reportFiles: 'index1.html',
                                     reportTitles: '', allowMissing: false, alwaysLinkToLastBuild: false, keepAll: false])
            }
           }
         stage("test2"){
            steps
            {
                sleep 45
                
                git "https://github.com/mohamedtarekali/usingShaftEngine.git"
                bat "mvn test -DbrowserStack.deviceName=\"Samsung Galaxy S21\" -Dmaven.test.failure.ignore=true clean package -f ShaftEnginProject/pom.xml"
              publishHTML([reportName  : 'Allure Report', reportDir: 'target/site/allure-maven-plugin', reportFiles: 'index2.html',
                                     reportTitles: '', allowMissing: false, alwaysLinkToLastBuild: false, keepAll: false])
            }
           }
             
            }
        }
          
    }
}
