pipeline {
    agent any
    tools
    {
    maven "MAVEN_HOME"
    }
    stages{
    
        stage('Run Tests') {
            parallel {

         stage("test1"){
            steps
            {
                git "https://github.com/mohamedtarekali/usingShaftEngine.git"
                bat "mvn -Dmaven.test.failure.ignore=true clean package -f ShaftEnginProject/pom.xml"
                script {
            allure([
                   
                    zip archive: true, dir: "target/allure-results", glob: '', zipFile: "allure-results.zip"
                    copyArtifacts filter: 'allure-results.zip', optional: true, projectName: "Regression1", selector: lastCompleted(), target: "Regression1"
unzip dir: "Regression1", glob: '', zipFile: "Regression1/allure-results.zip"
            ])
    }
            }
           }
         stage("test2"){
            steps
            {
                sleep 45
                
                git "https://github.com/mohamedtarekali/usingShaftEngine.git"
                bat "mvn test -DbrowserStack.deviceName=\"Samsung Galaxy S21\" -Dmaven.test.failure.ignore=true clean package -f ShaftEnginProject/pom.xml"
                script {
            allure([
                   
                     zip archive: true, dir: "target/allure-results", glob: '', zipFile: "allure-results.zip"
                    copyArtifacts filter: 'allure-results.zip', optional: true, projectName: "Regression2", selector: lastCompleted(), target: "Regression2"
unzip dir: "Regression2", glob: '', zipFile: "Regression2/allure-results.zip"
            ])
    }
            }
           }
             allure serve Regression1 Regression2
            }
        }
          
    }
}
