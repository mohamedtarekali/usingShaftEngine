pipeline {				        //indicate the job is written in Declarative Pipeline
    agent any				    //agent specifies where the pipeline will execute. 
    tools
    {
    maven "MAVEN_HOME"
    }
    stages {
    
        stage('Run Tests') {
            parallel {
            
        stage ("build1") {		//an arbitrary stage name
            steps {
                                //this is where we specify which job to invoke.
               build job: 'shaftJob', parameters: [[$class: 'StringParameterValue', name: 'deviceName', value: 'Google Pixel 4']]
                                //generate allure report
            }
        }
        
           stage ("build2") {		//an arbitrary stage name
            steps {
                                    //this is where we specify which job to invoke.
               build job: 'shaftJob', parameters: [[$class: 'StringParameterValue', name: 'deviceName', value: 'Samsung Galaxy S21']]
                                    //generate allure report
            }
        }
        
        }
        }
    }
}
